#!/usr/bin/env php
<?php

if (file_exists(__DIR__ . '/../vendor/autoload.php')) {
    // dependencies were installed via composer - this is the main project
    require __DIR__ . '/../vendor/autoload.php';
} elseif (file_exists(__DIR__ . '/../../../autoload.php')) {
    // installed as a dependency in `vendor`
    require __DIR__ . '/../../../autoload.php';
} else {
    throw new \Exception('Can\'t find autoload.php. Did you install dependencies via composer?');
}

use Indigo\Supervisor\Command\ProcessCommand;
use Indigo\Supervisor\Command\SupervisorCommand;
use Symfony\Component\Console\Application;

if (!class_exists('Symfony\\Component\\Console\\Application')) {
    throw new \Exception('Can\'t find Symfony Console. Please install it via composer!');
}

$application = new Application();
$application->add(new ProcessCommand);
$application->add(new SupervisorCommand);
$application->run();
